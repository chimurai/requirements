{
  "name": "requirements",
  "version": "1.4.0",
  "license": "MIT",
  "author": "chimurai",
  "homepage": "https://github.com/chimurai/requirements",
  "bugs": {
    "url": "https://github.com/chimurai/requirements/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chimurai/requirements.git"
  },
  "keywords": [
    "requirements",
    "software",
    "version",
    "checker"
  ],
  "main": "./dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "bin",
    "dist"
  ],
  "bin": {
    "requirements": "./bin/requirements.js"
  },
  "scripts": {
    "clean": "rm -rf dist && rm -rf coverage",
    "build": "tsc",
    "lint": "prettier --check \"**/*.{js,ts,md}\" || echo 'ğŸ”§  Run: \"npm run lint:fix\" to fix issues'",
    "lint:fix": "prettier --write \"**/*.{js,ts,md}\"",
    "test": "jest",
    "coverage": "jest --coverage --coverageReporters=lcov",
    "prepare": "yarn clean && yarn test && yarn build",
    "gitignore:update": "curl https://www.gitignore.io/api/node --silent > .temp && cat tools/dotgitignore | cat - .temp > .gitignore && rm .temp"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,ts,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "bin-version": "^4.0.0",
    "chalk": "^4.0.0",
    "log-symbols": "^4.0.0",
    "semver": "^7.0.0",
    "table": "^6.0.0",
    "yargs": "^16.0.0"
  },
  "devDependencies": {
    "@types/jest": "26.0.10",
    "@types/node": "12.12.54",
    "@types/yargs": "15.0.5",
    "husky": "^4.0.0",
    "jest": "26.6.1",
    "lint-staged": "^10.0.0",
    "prettier": "2.0.5",
    "ts-jest": "26.2.0",
    "ts-node": "9.0.0",
    "typescript": "4.0.2"
  }
}
