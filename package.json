{
  "name": "requirements",
  "version": "1.4.1",
  "license": "MIT",
  "author": "chimurai",
  "homepage": "https://github.com/chimurai/requirements",
  "bugs": {
    "url": "https://github.com/chimurai/requirements/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chimurai/requirements.git"
  },
  "keywords": [
    "requirements",
    "software",
    "version",
    "checker"
  ],
  "engines": {
    "node": "^14.13.1 || >=16.0.0"
  },
  "type": "module",
  "exports": "./dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "bin",
    "dist"
  ],
  "bin": {
    "requirements": "./bin/requirements.js"
  },
  "scripts": {
    "clean": "rm -rf dist coverage tsconfig.tsbuildinfo",
    "build": "tsc --build",
    "lint": "prettier --check \"**/*.{js,ts,md}\" || echo 'ğŸ”§  Run: \"npm run lint:fix\" to fix issues'",
    "lint:fix": "prettier --write \"**/*.{js,ts,md}\"",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "prepare": "husky install",
    "prepack": "yarn clean && yarn test && yarn build",
    "gitignore:update": "curl -L https://www.toptal.com/developers/gitignore/api/node --silent > .temp && cat tools/dotgitignore | cat - .temp > .gitignore && rm .temp"
  },
  "lint-staged": {
    "**/*.{js,ts,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "bin-version": "^6.0.0",
    "chalk": "^5.0.0",
    "log-symbols": "5.1.0",
    "semver": "^7.3.5",
    "table": "^6.7.2",
    "yargs": "^17.2.1"
  },
  "devDependencies": {
    "@types/jest": "29.1.1",
    "@types/node": "18.6.3",
    "@types/yargs": "17.0.12",
    "husky": "8.0.1",
    "jest": "29.1.2",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "ts-jest": "29.0.3",
    "ts-node": "10.9.1",
    "typescript": "4.8.3"
  }
}
