  "repository": {
    "type": "git",
    "url": "https://github.com/chimurai/requirements.git"
  },
  "keywords": [
    "requirements",
    "software",
    "version",
    "checker"
  ],
  "main": "./dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "bin",
    "dist"
  ],
  "bin": {
    "requirements": "./bin/requirements.js"
  },
  "scripts": {
    "clean": "rm -rf dist && rm -rf coverage",
    "build": "tsc",
    "lint": "prettier --check \"**/*.{js,ts,md}\" || echo 'ğŸ”§  Run: \"npm run lint:fix\" to fix issues'",
    "lint:fix": "prettier --write \"**/*.{js,ts,md}\"",
    "test": "jest",
    "coverage": "jest --coverage --coverageReporters=lcov",
    "prepare": "yarn clean && yarn test && yarn build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,ts,md}": ["prettier --write", "git add"]
  },
  "dependencies": {
    "bin-version": "^4.0.0",
    "chalk": "^2.4.2",
    "log-symbols": "^3.0.0",
    "semver": "^6.3.0",
    "table": "^5.4.6",
    "yargs": "^14.0.0"
  },
  "devDependencies": {
    "@types/jest": "24.0.21",
    "@types/node": "12.12.5",
    "@types/yargs": "13.0.3",
    "husky": "^3.0.9",
    "jest": "24.9.0",
    "lint-staged": "^9.4.2",
    "prettier": "1.18.2",
    "ts-jest": "24.1.0",
    "ts-node": "8.4.1",
    "typescript": "3.6.4"
  }
